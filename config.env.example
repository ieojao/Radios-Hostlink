# Configurações do banco de dados
DATABASE_URL=sqlite:///radio.db
# Para MySQL: mysql+pymysql://usuario:senha@localhost/radio_web
# Para PostgreSQL: postgresql://usuario:senha@localhost/radio_web

# Chave secreta para sessões (GERE UMA CHAVE ÚNICA!)
SECRET_KEY=sua-chave-secreta-muito-segura-aqui

# Configurações do site
SITE_NAME=Radios Hostlink
SITE_EMAIL=contato@radioshostlink.com.br
STREAMING_URL=https://streaming.example.com/live

# Configurações de email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app

# Configurações de cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configurações de segurança
FLASK_ENV=development
# Para produção: FLASK_ENV=production

# Configurações de upload
MAX_CONTENT_LENGTH=16777216  # 16MB em bytes 